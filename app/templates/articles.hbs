{{#paper-content classNames="md-whiteframe-z1 list-demo"}}

{{outlet}}
    {{#paper-list}}
        {{#each article in model}}
            {{#paper-item}}
                {{#paper-tile-left}}
                    <span {{action 'upvote' article}}>
                        {{paper-icon icon="arrow-drop-up" size=2}}</span>
                    <span class="vote-count">
                        {{#if article.votes}}
                            {{article.votes}}
                        {{else}}
                            0
                        {{/if}}
                    </span>
                {{/paper-tile-left}}
                {{#paper-tile-content}}
                    <a target="_blank" class="article-link" href={{unbound article.url}}>{{article.title}}</a>
                    <div>
                        submitted by {{article.user.email}}
                    </div>
                {{/paper-tile-content}}
            {{/paper-item}}
        {{/each}}
    {{/paper-list}}
{{/paper-content}}
